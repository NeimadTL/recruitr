<p id="notice"><%= notice %></p>

<h1>Positions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Skills</th>
      <th>Number of candidates</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.title %></td>
        <td>
          <% position.skills.each do |skill| %>
            #<%= skill.name %>
          <% end %>
        </td>
        <td><%= position.candidates.count %></td>
        <td><%= link_to 'Show', hr_position_path(position) %></td>
        <td><%= link_to 'Edit', edit_hr_position_path(position) %></td>
        <td><%= link_to 'Destroy', hr_position_path(position), method: :delete,
          data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Position', new_hr_position_path %>
