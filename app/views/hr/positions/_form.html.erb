<%= simple_form_for position, url: position.persisted? ? hr_position_path :
  hr_positions_path, class: "form-inline" do |form| %>
  <% if position.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(position.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
        <% position.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.input :title %>
  <%= form.select(:skill_ids, Skill.all.collect {|s| [ s.name, s.id ] },
    { :prompt => "Please select one or many skills" },
    { :multiple => true, :size => 5, class: 'form-control'}) %>
  <br>
  <%= form.button :submit, class: 'btn btn-primary' %>

<% end %>
