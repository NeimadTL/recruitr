<br><br>
<div class="card">
  <div class="card-header">
    <%= @position.title %>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <% @position.skills.each do |skill| %>
        <span class="badge badge-info">#<%= skill.name %></span>
      <% end %>
    </h5>
    <p class="card-text"><%= @position.description %></p>
    <% if current_user.interviewers.count > 0 %>
      Interviewers :<br>
      <% current_user.interviewers.each do |interviewer| %>
        <span class="badge badge-secondary">#<%= interviewer.firstname %></span>
      <% end %>
    <% end %><br><br>
    <% if current_user.applied?(@position) %>
      <%= render 'withdraw', position: @position %>
    <% else %>
      <%= render 'apply', position: @position %>
    <% end %>
  </div>
</div>
<br><br>
<%= link_to 'Back', candidate_positions_path %>
